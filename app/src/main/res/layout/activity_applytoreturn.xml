<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.midian.base.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.midian.base.widget.BaseLibTopbarView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提示：您申请退款前请联系平台客服"
            android:textSize="12sp"
            android:textColor="#F07803"
            android:background="#FDE7D2"
            android:padding="10dp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="处理方式"
                android:textSize="12sp"
                android:textColor="#363636">
            </TextView>
            <TextView
                android:id="@+id/tvType"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="仅退款"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_edit"
                android:drawableRight="@drawable/icon_arrow_down_gray"
                android:textColor="#363636">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款金额"
                android:textSize="12sp"
                android:textColor="#363636">
            </TextView>
            <TextView
                android:id="@+id/tvMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textColor="#FA2200">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款说明"
                android:textSize="12sp"
                android:textColor="#363636">
            </TextView>
            <EditText
                android:id="@+id/etDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edit"
                android:height="100dp"
                android:hint="请输入退款说明"
                android:textSize="13sp"
                android:padding="10dp"
                android:gravity="start"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center">
            <Button
                android:id="@+id/btnCommit"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="提交申请"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_red5radiu_solid"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>