<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llGood"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.midian.base.widget.ScrollViewWidthListener
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.midian.base.widget.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        app:indicator_width="7dp"
                        app:indicator_height="7dp">
                    </com.midian.base.widget.Banner>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/tvGoodName"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="3dp"
                                android:text=""/>
                            <CheckBox
                                android:id="@+id/cbCollection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="收藏"
                                android:textColor="@color/selector_tagcolor"
                                android:textSize="13sp"
                                android:drawablePadding="2dp"
                                android:drawableTop="@drawable/selector_collect"
                                android:layout_marginLeft="15dp"
                                android:button="@null"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/tvPrice"
                                android:layout_width="wrap_content"
                                android:gravity="end"
                                android:layout_height="wrap_content"
                                android:text="消费豆:"
                                android:textColor="#FF3C00"
                                android:textSize="15sp"/>
                            <TextView
                                android:id="@+id/tvWelfare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#FF3C00"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/shape_2radius_stroke_orange"
                                android:text="返1倍积分"/>
                            <TextView
                                android:id="@+id/tvStock"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="#666"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="3dp"
                                android:text="库存：0"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/tvMarketPrice"
                                android:layout_width="wrap_content"
                                android:gravity="end"
                                android:textColor="#666"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="3dp"
                                android:text="市场参考价：0.0"/>
                            <TextView
                                android:id="@+id/tvExpress"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textColor="#666"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="3dp"
                                android:text="快递：0.00"/>
                            <TextView
                                android:id="@+id/tvPosition"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="#666"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="3dp"
                                android:text="广州"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#FF3C00"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:background="@drawable/shape_2radius_stroke_orange"
                                android:text="积分"/>
                            <TextView
                                android:id="@+id/tvIntegral"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textColor="#333"
                                android:layout_marginLeft="20dp"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="3dp"
                                android:textSize="13sp"
                                android:text="购买可得0.0积分"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvChooseColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="14sp"
                            android:textColor="#333"
                            android:text="选择颜色分类"
                            android:drawableRight="@drawable/icon_arrow_r"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:id="@+id/ivShop"
                                android:layout_width="80dp"
                                android:layout_height="55dp"
                                android:src="#eee"/>
                            <TextView
                                android:id="@+id/tvShopName"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="店铺名称"
                                android:textColor="#666"
                                android:textSize="14sp"
                                android:layout_marginLeft="20dp"/>
                            <Button
                                android:id="@+id/btnInShop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="@color/orange"
                                android:text="进店逛逛"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:background="@drawable/shape_30radius_stroke_orange"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:id="@+id/viewFlag"
                        android:layout_marginTop="48dp"
                        android:layout_marginBottom="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divide_line"/>
                </LinearLayout>
            </com.midian.base.widget.ScrollViewWidthListener>
            <SlidingDrawer
                android:id="@+id/slidingdrawer"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="match_parent"
                android:content="@+id/content"
                android:handle="@+id/handle"
                android:visibility="gone"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@id/handle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#707070"
                    android:gravity="center"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/tvUpDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上拉查看商品详情"
                        android:textColor="@color/white" />
                    <ImageView
                        android:id="@+id/ivUpDown"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_double_arrow_t"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@id/content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFF"
                    android:orientation="vertical" >
                    <include layout="@layout/temp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </SlidingDrawer>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white">
            <Button
                android:id="@+id/btnShop"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="店铺"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="12sp"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/icon_shop"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divide_line"/>
            <Button
                android:id="@+id/btnShare"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="分享"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="12sp"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/icon_share"/>
            <Button
                android:id="@+id/btnAddToShopCar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="加入购物车"
                android:gravity="center"
                android:textSize="14sp"
                android:background="#fb8c56"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/btnBuyNow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="立即购买"
                android:gravity="center"
                android:textSize="14sp"
                android:background="#f86442"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
    <com.midian.base.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.midian.base.widget.BaseLibTopbarView>
</RelativeLayout>