<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.midian.base.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.midian.base.widget.BaseLibTopbarView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:padding="15dp">
        <EditText
            android:id="@+id/etNewPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入新手机号"
            android:inputType="phone"
            android:background="@null"
            android:textSize="14sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_line"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <EditText
                android:id="@+id/etCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:background="@null"
                android:inputType="number"
                android:textSize="14sp"/>
            <Button
                android:id="@+id/btnCode"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="获取验证码"
                android:background="@drawable/shape_20radius_stroke_blue"
                android:textSize="12sp"
                android:textColor="#0091E0"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_line"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_30radius_solid_orange"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="确认"/>
    </LinearLayout>
</LinearLayout>